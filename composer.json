{
  "name": "mothership/state_machine",
  "description": "php implementation of state machine, completely configured by an external .yml file with the render of a graph's description",
  "homepage": "https://www.mothership.de",
  "license": "MIT",
  "authors": [
    {
      "name": "Maurizio Brioschi",
      "email": "brioschi@mothership.de"
    },
    {
      "name": "Don Bosco van Hoi",
      "email": "vanhoi@mothership.de"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.5",
    "symfony/console": "2.7.*",
    "symfony/yaml": "^2.7",
    "mothership/component_base": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8",
    "escapestudios/symfony2-coding-standard": "~2.0"
  },
  "autoload": {
    "psr-4": {
      "Mothership\\StateMachine\\": "src/Mothership/StateMachine/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mothership\\Examples\\": "src-tests/Mothership/Examples/",
      "Mothership\\Tests\\": "src-tests/Mothership/Tests/"
    }
  }
